
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>Tous les utilisateurs</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                ID de l'utilisateur : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id">Modifier</a>
                    <button class="btn btn-danger" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer : @user.UserName')">Supprimer</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Pas encore d'utilisateurs créés'
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Utiliser le bouton en dessous pour créer un nouvel utilisateur
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Ajouter un nouvel utilisateur
            </a>
        </div>
    </div>
}
