@model IdentityServerAspNetIdentity.ViewModels.CreateUserViewModel

<div class="create-page">
    <div class="page-header">
        <h1>Incription</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-action="CreateDone">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="UserName">Nom d'utilisateur</label>
                                <input class="form-control" placeholder="Nom d'utilisateur" asp-for="UserName" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordHash">Mot de passe</label>
                                <input type="password" class="form-control" placeholder="Mot de passe" asp-for="PasswordHash" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Adresse mail</label>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                            </div>
                            
                            <div class="form-group">
                                <div class="form-row">
                                    <label>Téléphone</label>
                                </div>
                                <div class="form-row">
                                    <div class="form-col">
                                        <select class="form-control" asp-for="CountryCode" autocomplete="off">
                                            <option value="+41">+41</option>
                                            <option value="+33">+33</option>
                                        </select>
                                    </div>
                                    <div class="form-col">
                                        <input type="number" class="form-control" placeholder="788888888" asp-for="PhoneNumber" autocomplete="off">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Envoyer</button>
                                <input type="button" class="btn btn-default" value="Retour" onclick="history.go(-1)">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>