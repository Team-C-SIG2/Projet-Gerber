@model IdentityServerAspNetIdentity.ViewModels.SMSVerification
@{
    ViewData["Title"] = "Vérification SMS";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="ApplicationUser" asp-action="PostVerifyPhoneModel" method="post">
            <p>
                Un SMS de vérification va être envoyé sur votre téléphone @Model.PhoneNumber
            </p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Envoyer SMS</button>
        </form>
    </div>
</div>
