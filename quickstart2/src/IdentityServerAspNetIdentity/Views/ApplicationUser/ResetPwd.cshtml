<div class="create-page">
    <div class="page-header">
        <h1>Mot de passe oublié</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">

                    <form asp-action="ResetPwdMail">
                        <fieldset>
                            <div class="form-group">
                                <label for="email">Adresse mail</label>
                                <input id="email" type="email" class="form-control" placeholder="Email" name="mail" autocomplete="off">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Envoyer</button>
                                <input type="button" class="btn btn-default" value="Retour" onclick="history.go(-1)">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>