<div class="create-page">
    <div class="page-header">
        <h1>Mot de passe oublié</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Mot de passe oublié</h3>
                </div>
                <div class="panel-body">

                    <form asp-action="ResetPwdMail">
                        <fieldset>
                            <div class="form-group">
                                <label for="email"></label>
                                <input id="email" type="email" class="form-control" placeholder="Email" name="mail" autocomplete="off">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Envoyer</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>