        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li>
                    <a class="nav-link" asp-controller="Administration" asp-action="PageAccueil">Accueil</a>
                </li>
                @if (this.User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="ListRoles" asp-controller="Administration">Liste des rôles</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="CreateRole" asp-controller="Administration">Créer rôle</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="ListUsers" asp-controller="Administration">Liste des utilisateurs</a>
                    </li>
                }
