@model AppWebClient.Models.Payment

@{
    ViewData["Title"] = "Détails";
}

<h1>Détails de la commande</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaidDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaidDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceTotal) CHF
        </dd>
    </dl>
</div>

@if (Model.IdOrderNavigation.Status == "Envoyé")
{
    <p class="alert alert-success" role="alert">Votre commande a bien été envoyée et devrait arriver dans les 2 à 4 jours ouvrables.</p>
}
else
{
    <p class="alert alert-danger" role="alert">
        Votre commande n'a pas encore été envoyée car un des livres achetés n'est plus en stock.
        Elle devrait arriver d'ici 2 semaines.
    </p>
}

<hr />
<div>
    <a asp-controller="Orders" asp-action="Index">Retour au récapitulatif des commandes</a> |
    <a asp-controller="Home" asp-action="Index">Retour à l'accueil</a> |
    <a asp-action="Getpdf" asp-route-id="@Model.Id" target="_blank">Générer en PDF</a>
</div>
