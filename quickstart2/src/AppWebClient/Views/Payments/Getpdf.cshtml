@model AppWebClient.Models.Payment

@{
    ViewData["Title"] = "Getpdf";
}

@{ 
    Customer customer = ViewBag.Customer as AppWebClient.Models.Customer;
}

<html>

<body>

    <h1>Détail de la facture</h1>
    <br />
    <p><strong>Facturé à</strong></p> <br />
    <p>@customer.Lastname @customer.Firstname</p><br />
    <p>@customer.Address</p><br />
    <p>@customer.Zip @customer.City</p><br />
    <table class="table">
        <tr>
            <th>
                Date
            </th>
            <th>
                Prix total
            </th>
            <th>
                Details
            </th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(model => model.PaidDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.PriceTotal) CHF
            </td>
            <td>
                @Html.DisplayFor(model => model.Details)
            </td>
        </tr>

    </table>
    <hr />
</body>
</html>

