@model AppWebClient.Models.Appreciation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Appreciation</h4>

<br />
<div>
    <p>NB: The appreciation "Evaluation" value should be a value between 1-5</p>
</div>

<hr />
<div class="row">
    <div class="col-md-4">

        @*FORMULAIRE : Action du Controleur*@
        <form asp-action="PostAppreciation">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Evaluation" class="control-label"></label>
                <input asp-for="Evaluation" class="form-control" />
                <span asp-validation-for="Evaluation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdLineItem" class="control-label"></label>
                <select asp-for="IdLineItem" class="form-control" asp-items="ViewBag.IdLineItem"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdOrder" class="control-label"></label>
                <select asp-for="IdOrder" class="form-control" asp-items="ViewBag.IdOrder"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdPayment" class="control-label"></label>
                <select asp-for="IdPayment" class="form-control" asp-items="ViewBag.IdPayment"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

