@page
@model AppWebClient.Models.AspNetUser
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Chat de : @ViewBag.user</div>
    </div><br />
    <div class="row">
        <div class="col-2" hidden="hidden" id="userInput">@ViewBag.user</div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" onfocus="this.value=''" placeholder="" /></div>
    </div>
    <div class="row">
        <div class="col-4"><input type="text" hidden="hidden" id="dateInput" value="" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script>

</script>
<script>
    var d = new Date();
    document.getElementById("dateInput").value =
        d.getHours() + "h " +
        d.getMinutes() + "m " +
        d.getSeconds() + "s,  le : " +
        d.getDate() + "." +
        (d.getMonth() + 1) + "." +
        d.getFullYear() + ".";
</script>
