@model AppWebClient.ViewModel.BookReviews

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<table style="width: 100%; border: 1px solid black">
    <tr>
        <td>
            @Model.Date.ToString(format: "dd-MMM-yyyy")
        </td>

    </tr>
    <tr>
        <td>
            @Model.Description
        </td>

    </tr>
    <tr>
        <td>
            @for (int i = 0; i < Model.Note; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (int i = Model.Note; i < 5; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </td>
    </tr>
    <tr>
        <td>
            @Model.Username
        </td>
        <td align="right">
            <a asp-action="SignalReview" asp-controller="Books" asp-route-id="@Model.Id" asp-route-bookId="@Model.BookId" class="btn btn-primary" style="width:auto">Signaler</a>
        </td>
    </tr>
</table>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>