@model AppWebClient.Models.Category

@{
    ViewData["Title"] = "DeleteCategorie";
}

<h1>Suppresion de categorie de livres</h1>

<h4>Êtes-vous sûr de vouloir supprimer la catégorie sélectionnée?</h4>

<div>
    <a asp-action="ManageCategories" asp-route-id="@ViewBag.BOOKID" asp-route-title="@ViewBag.BOOKTITLE">Retour aux categories</a>|
    <a asp-action="Index">Retour à la liste des livres</a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Categorie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            ISBN du livre
        </dt>
        <dd class="col-sm-10">
            @ViewBag.BOOKISBN
        </dd>
    </dl>

    <form asp-action="ConfirmeDeleteCategorie" asp-route-idCategorie="@ViewBag.CATEGORIEID" asp-route-idBook="@ViewBag.BOOKID">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
