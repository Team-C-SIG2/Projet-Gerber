@model AppWebClient.Models.Cowriter

@{
    ViewData["Title"] = "DeleteCowriter";
}

<h1>Suppresion d'auteur</h1>

<h4>Êtes-vous sûr de vouloir supprimer l'auteur sélectionné?</h4>

<div>
    <a asp-action="ManageCowriters" asp-route-id="@ViewBag.BOOKID" asp-route-title="@ViewBag.BOOKTITLE">Retour aux auteurs</a>|
    <a asp-action="Index">Retour à la liste des livres</a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Auteur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAuthorNavigation.Firstname)  @Html.DisplayFor(model => model.IdAuthorNavigation.Lastname)
        </dd>
        <dt class="col-sm-2">
            ISBN du livre
        </dt>
        <dd class="col-sm-10">
            @ViewBag.BOOKISBN
        </dd>
    </dl>

    <form asp-action="ConfirmeDeleteCowriter" asp-route-idAuthor="@ViewBag.IdAuthor" asp-route-idBook="@ViewBag.IdBook">
        <input type="hidden" asp-for="IdAuthor" />
        <input type="hidden" asp-for="IdBook" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
